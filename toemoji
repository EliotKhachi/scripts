#!/bin/bash

## USAGE: echo ":smiley:" | toemoji
declare -A emoji

emoji[gorilla]=ğŸ¦
emoji[flowers]=ğŸ’
emoji[dolphin]=ğŸ¬
emoji[joystick]=ğŸ•¹
emoji[smiley]=ğŸ˜ƒ
emoji[laugh]=ğŸ˜‚
emoji[wink]=ğŸ˜‰
emoji[heart]=â¤ï¸
emoji[heartbroken]=ğŸ’”

toemoji() {
  while read -r line; do
    for k in ${!emoji[@]}; do
      line=${line//:$k:/${emoji[$k]}} 
    done
    echo "$line"
  done
}

toemoji "$@"
